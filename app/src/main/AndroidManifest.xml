<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs.software.engineering.jobthirsty" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".util.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".profile.EmployeeProfileActivity"
            android:label="Profile"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".util.NavigationDrawerFramework" >
        </activity>
        <activity android:name=".newsfeed.Newsfeed" >
        </activity>
        <activity android:name=".mail.Mail" >
        </activity>
        <activity
            android:name=".Login"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".connections.Connections" >
        </activity>
        <activity android:name=".ComposeMail" >
        </activity>
        <activity
            android:name=".job_position.FindPositions"
            android:label="@string/title_activity_find_positions"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".job_position.ViewJobPosition"
            android:label="@string/title_activity_job_position"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".job_position.CreateJobPosition" >
        </activity>
        <activity
            android:name=".applied_workers.AppliedWorkers"
            android:label="@string/title_activity_applied_workers"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".profile.EmployerProfileActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".find_workers.FindWorker" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".company_page.CreateCompanyPage" >
        </activity>
        <activity android:name=".company_page.FindCompany" >
        </activity>
        <activity android:name=".SettingsActivity" >
        </activity>
    </application>

</manifest>
