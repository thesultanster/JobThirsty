<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coord_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile">

    <!-- Scrollable View -->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_margin="15sp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#FFffffff">

        <LinearLayout
            android:id="@+id/mainLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/navigation_icon"
                        android:layout_width="39.5dp"
                        android:layout_height="39.5dp"
                        android:padding="10dp"
                        android:src="@mipmap/navigation_icon_green" />

                    <EditText
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/navigation_icon"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:background="#FFffffff"
                        android:hint="[Location]"
                        android:textColor="@color/primaryText"
                        android:textSize="18sp"
                        android:editable="false"
                        android:ems="18"/>

                    <EditText
                        android:id="@+id/biography"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/location"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:background="#FFffffff"
                        android:hint="[Biography]"
                        android:textColor="@color/primaryText"
                        android:textSize="15sp"
                        android:editable="false"
                        android:inputType="textMultiLine"/>

                </RelativeLayout>
            </RelativeLayout>

            <!-- Beginning of sections -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/skillsParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/skillsIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:src="@mipmap/skills"/>

                    <TextView
                        android:id="@+id/skillsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/skillsIcon"
                        android:text="Skills"
                        android:textColor="@color/primaryText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/skillsEditBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible"
                        android:background="@drawable/plus"/>

                    <!-- Filler -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_below="@+id/skillsIcon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experienceParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/experienceIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:src="@mipmap/experience" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/experienceIcon"
                        android:text="Experience"
                        android:textColor="@color/primaryText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/experienceEditBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible"
                        android:background="@drawable/plus"/>

                    <!-- Filler -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_below="@+id/experienceIcon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/projectsParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/projectsIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:src="@mipmap/projects" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/projectsIcon"
                        android:text="Projects"
                        android:textColor="@color/primaryText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/projectsEditBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible"
                        android:background="@drawable/plus"/>

                    <!-- Filler -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_below="@+id/projectsIcon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/educationParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/educationIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/education" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/educationIcon"
                        android:text="Education"
                        android:textColor="@color/primaryText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/educationEditBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible"
                        android:background="@drawable/plus"/>

                    <!-- Filler -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_below="@+id/educationIcon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activitiesParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/activitiesIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/activities" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/activitiesIcon"
                        android:text="Activities"
                        android:textColor="@color/primaryText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/activitiesEditBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible"
                        android:background="@drawable/plus"/>

                    <!-- Filler -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_below="@+id/activitiesIcon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/awardsParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/awardsIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/awards" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/awardsIcon"
                        android:text="Awards"
                        android:textColor="@color/primaryText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/awardsEditBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible"
                        android:background="@drawable/plus"/>

                    <!-- Filler -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_below="@+id/awardsIcon"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/prof"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:background="#00FFFFFF"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme.Dark"
                app:layout_collapseMode="pin" />

            <TextView
                android:id="@+id/editProfileBtn"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:layout_marginRight="45sp"
                android:layout_marginBottom="5sp"
                android:text="Edit Profile"
                android:gravity="center"
                android:textColor="@color/cloud"
                android:layout_gravity="bottom|right"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_bookmark_white_24dp"
        app:layout_anchor="@id/scrollView"
        app:layout_anchorGravity="top|right|end"/>


</android.support.design.widget.CoordinatorLayout>
